escape ^Oo

# sane defaults
defscrollback 10000
termcapinfo xterm ti@:te@
termcapinfo xterm-color ti@:te@
shell -$SHELL
logtstamp on
logtstamp after 1
TERM=xterm-256color
altscreen on
nonblock on

# shhh
startup_message off
msgwait 0
vbell off
vbell_msg ""

# unbind annoyances
bind s
bind x

# status lines
hardstatus off  # no hardstatus bar
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-="  # pretty caption (no vert split bar)
rendition so "="  # no horizontal split bar
# empty title for new buffers, unset PROMPT_COMMAND in bashrc prevents auto-rename
shelltitle ""

# vi key focus
bind k focus up
bind j focus down
bind h focus left
bind l focus right

# vi key resize
bind ^k resize -v -1
bind ^j resize -v +1
bind ^h resize -h -1
bind ^l resize -h +1

# custom commands
bindkey -t '@#cs' stuff "sudo su - root\015"
bindkey -t '@#cl' stuff " ls -lartF\015"

# vim commands
bindkey -t '@#vc' stuff "s/\^/#\~ /\015"
bindkey -t '@#vu' stuff "s/\^#\~ //\015"
